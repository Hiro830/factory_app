<h1>従業員詳細ページ</h1>

<table border="1">
  　<tr>
  　　<th>名前</th>
  　　<th>性別</th>
      <th>skill</th>
      <th>能力</th>
      <th>給料[円]</th>
      <th>入社日</th>
      <th>解雇</th>
    </tr>
    <% @employees.each do |a| %>
    <tr>

      <td><%= a["name"] %></td>
      <td><%= a["gender"] %></td>
      <td><%= a["skill"] %></td>
      <td><%= a["ability"] %></td>
      <td><%= a["salary"] %></td>
      <td><%= a["created_at"] %></td>
      <td>
        <a href="/kaiko/<%= a["id"] %>">ここ</a>

      </td>
    </tr>
    <% end %>
</table>


